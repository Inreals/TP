            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="getPokemonGen"
            android:scaleType="centerCrop"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@drawable/image_pressable" />

