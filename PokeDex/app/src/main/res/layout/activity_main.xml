            android:onClick="getPokemonGen"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@drawable/image_pressable" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listagepokemon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

